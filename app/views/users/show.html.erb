<%= provide(:title, @user.name) %>
<div class="inner page wide-style">

<section>
  <div id="profile">
    <div class="row">
      <div class="four columns">
      <% if @user.picture? %>
          <%= link_to '#', data: { toggle: "modal", target: ".bs-example-modal-lg" } do %>
            <%= display_thumbnail(@user) %>
          <% end %>
        <% else %>
          <%= display_thumbnail(@user) %>
        <% end %>
      </div>
      <div class="eight columns">
        <h2 class="sweetfont left"><%=@user.name %> </h2>
        <hr>
        <% unless @user.admin? %>
          <h6 class="subheader"><%= "#{@user.age} â€¢ #{@user.city}, #{@user.country}" %></h6>
        <% end %>
        
      </div>
    </div>
  </div>
</section>

<% unless @user.admin? %>
  <section>
  	<div id="main">
    	<div class="row">
      <div class="eight columns">
         
                <h5 class="accordion-title">My self-summary</h5>
                <div class="accordion-content">
                  <p>
                    <div>
                      <% if @user.self_summary.blank? %>
                        <p><%= @user.name %> has not written a self-summary yet.</p>
                      <% else %>
                        <p><%= @user.self_summary %></p>
                      <% end %>
                    </div>
                  </p>
                </div>
           
        
        
        
      </div>
      <div class="four columns">
        
        
          
          	   
                <h5 class="accordion-title">Profile</h5>
                
                <div>
                   
                  <dl class="text-align:left">
                    <dt>Gender</dt>
                    <dd><%= @user.gender %></dd>
                    <dt>Religion</dt>
                    <dd><%= @user.religion %></dd>
                   
                    <dt>Occupation</dt>
                    <dd><%= @user.occupation %></dd>
                  </dl>
                 
                </div>
             
              
                    
                  
                      
                      <div class="panel panel-default">
                        <div class="panel-body none-padding">
                      Looking for
                      <% if @user.preferred_gender == "both" %>
                        <%= "Both men and women "%>
                        <% else %>
                        <%= "A #{@user.preferred_gender} " %>
                        <% end %>
                        <%= "ages #{@user.min_age} to #{@user.max_age} for #{@user.looking_for}." %>
                        
                    </div>
              
            
               
                
                 </div>
                  <% if current_user?(@user) %>
            <div class="left">
                <div>
                   <%= link_to(edit_user_path(current_user)) do %>
                  <button class="btn btn-lg btn-primary">Edit profile</button>
                   <% end %>
                  </div>
                </div>
                <% end%>
                <% end %>
            </div>
          </div>
  
 

<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <%= image_tag @user.picture.url if @user.picture? %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>