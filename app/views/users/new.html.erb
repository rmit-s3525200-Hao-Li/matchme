<% provide(:title, 'Sign up') %>
<section>
  <div id="feature-text" class="text-center">
    <div class="row">
      <div class="twelve columns">
        <h3 class="pink-text"><i class="icon-magic icon-large"></i> CREATE ACCOUNT</h3>
          <%= form_for(@user, url: signup_path, id: "register_form") do |u| %>
          <%= render 'shared/error_messages' %>
          <%= fields_for @user.profile do |p| %>
            <%= p.text_field :first_name %>
          <% end %>

          <div class="six columns">
  
            <%= u.email_field :email, class: 'form-control', placeholder: "Email" %>
      
            <%= u.password_field :password, class: 'form-control', placeholder: "Password" %>
      
            <%= u.password_field :password_confirmation, placeholder: "Confirm password" %>
      
            <%= u.submit "Create my account", class: "btn btn-primary" %>

        <% end %>
      </div>
  </div>
  </div>
</section>


<%= form_for @person, url: {action: "create"} do |person_form| %>
  <%= person_form.text_field :name %>
  <%= fields_for @person.contact_detail do |contact_detail_form| %>
    <%= contact_detail_form.text_field :phone_number %>
  <% end %>
<% end %>