<%= provide(:title, @profile.name) %>

<div class="inner page wide-style">

<!-- User profile pic, name, age, location-->
<%= render 'user_top' %>

<section>
	<div id="main">
  	<div class="row">
  	  <h5 class="accordion-title left"><%= @title %></h5>
  	  <div class = "text-center">
    	  <!-- People this user has liked -->
    	  <% if @users.any? %>
          <ul class="users follow">
            <%= render @users %>
          </ul>
          <%= will_paginate(@users, :renderer => WillPaginate::ActionView::LinkRenderer) %>
        <% end %>
    </div> <!-- row -->
  </div> <!-- main -->
</section>

<!-- Profile picture Boostrap model (pop up) -->
<%= render 'picture_modal' %>