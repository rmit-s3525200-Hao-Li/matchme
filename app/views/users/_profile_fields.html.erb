<div class="form-group">
  <h4>About You</h4>
  <%= f.label :first_name, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
  </div>
  
  <%= f.label :last_name, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
  </div>
  
  <%= f.label :gender, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.select :gender, options_for_select(['Male', 'Female']), { prompt: '--select gender--', selected: @profile.gender }, { class: 'form-control' } %>
  </div>
  
  <%= f.label :date_of_birth, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.date_field :date_of_birth, class: 'form-control' %>
  </div>
  
  <%= f.label :occupation, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :occupation, class: 'form-control', placeholder: "Occupation" %>
  </div>
  
  <%= f.label :religion, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.select :religion, options_for_select(["Agnosticism", "Atheism", "Christianity", "Judaism", "Catholicism", "Islam", "Buddhism", "Hinduism", "Sikh", "Other"]), {prompt: '--select religion--', selected: @profile.religion }, { class: 'form-control'} %>
  </div>
  
  <%= f.label :smoke, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.select :smoke, options_for_select(["yes", "sometimes", "no"]), { include_blank: true }, { class: 'form-control' } %>
  </div>
    
  <%= f.label :drink, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.select :drink, options_for_select(["not at all", "socially", "often"]), {include_blank: true}, { class: 'form-control' } %>
  </div>
  
  <%= f.label :edu_status, "Education", class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <div class="row">
      <div class="col-sm-5">
        <%= f.select :edu_status, options_for_select(["Dropped out of", "Working on", "Completed"]), {include_blank: true}, { class: 'form-control' } %>
      </div>
      <div class="col-sm-5">
        <%= f.select :edu_type, options_for_select(["high school", "two-year college", "university", "post grad"]), {include_blank: true}, { class: 'form-control' } %>
      </div>
    </div>
  </div>
  
  <%= f.label :self_summary, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_area :self_summary, class: 'form-control', placeholder: 'Self-summary', rows: '8' %>
  </div>
  
  <%= f.label :picture, "Add a photo (optional)", accept: 'image/jpeg,image/png', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.file_field :picture %>
  </div>
  
</div>

<div class="form-group">
  <h4>Interests</h4>
    <%= f.label :movies, "Movies", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :movies, class: 'form-control', rows: '6', placeholder: 'The Godfather, Pulp Fiction, Star Wars' %>
    </div>
    
    <%= f.label :tv_shows, "TV Shows", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :tv_shows, class: 'form-control', rows: '6', placeholder: 'Breaking Bad, Rick and Morty, Game of Thrones, The Walking Dead' %>
    </div>
    
    <%= f.label :books, "Books", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :books, class: 'form-control', rows: '6', placeholder: 'The Great Gatsby, To Kill a Mockingbird, Harry Potter' %>
    </div>
    
    <%= f.label :games, "Games", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :games, class: 'form-control', rows: '6', placeholder: 'Legend of Zelda, Mario Kart, World of Warcraft' %>
    </div>
    
    <%= f.label :sports, "Sports", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :sports, class: 'form-control', rows: '6', placeholder: 'Baseball, cricket, water polo' %>
    </div>
</div>

<div class="form-group">
  <h4>Location</h4>
    <%= f.label :city, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :city, class: 'form-control', placeholder: "City" %>
    </div>
    
    <%= f.label :post_code, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :post_code, class: 'form-control', placeholder: "Post code" %>
    </div>
    
    <%= f.label :country, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.country_select :country, { priority_countries: ["AU", "US", "GB", "CA", "NZ"], include_blank: true }, { class: 'form-control' } %>
    </div>
</div>
  
<h4>What you're looking for</h4>
  <%= f.label :preferred_gender, "I am looking for...", class: 'control-label' %>
  <%= f.select :preferred_gender, options_for_select(["Male", "Female", "Both"]), {include_blank: true}, { class: 'form-control' } %>

<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :min_age, "ages...", class: 'col-sm-2 control-label' %>
      <div class="col-md-10">
        <%= f.select :min_age, options_for_select((18...121).to_a), {include_blank: true}, { class: 'form-control' } %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :max_age, "to", class: 'col-sm-2 control-label' %>
      <div class="col-md-10">
        <%= f.select :max_age, options_for_select((18...100).to_a), {include_blank: true}, { class: 'form-control' } %>
      </div>
    </div>
  </div>
</div>
    
