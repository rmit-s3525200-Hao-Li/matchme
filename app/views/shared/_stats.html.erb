<% @user ||= current_user %>

<div class="stats">
  <%= link_to likes_user_path(@user), class: "btn btn-info" do %>
    Likes
    <strong class="stat">
      <%= "(#{@user.likes.count})" %>
    </strong>
  <% end %>

  <%= link_to likers_user_path(@user), class: "btn btn-info" do %>
    Liked by
    <strong class="stat">
      <%= "(#{@user.likers.count})" %>
    </strong>
  <% end %>
</div>